extends ../layout.jade

block content
  .container
    .row
      .col-md-12
        h2 Cadastrar usu√°rio

    form(method="post", action='register')
      .form-group
        .row
          .col-md-12
            label Nome
            input.form-control(type="text", name="name")

      .form-group
        .row
          .col-md-12
            label Email
            input.form-control(type="text", name="email")

      .row
        .col-md-12
          label Senha
          input.form-control(type="password", name="password")

      .form-group
        .row
          .col-md-12
            label Cargo
            select.form-control(name="roles")
              option(value='admin') Administrador
              option(value='professor') Professor
              option(value='student') Aluno

      .form-group.text-right
        .row
          .col-md-12
            button.btn.btn-primary(type='submit') Cadastrar
